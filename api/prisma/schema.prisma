generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  imageUrl  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  clubs     Club[]   @relation("UserClubs")
}

model Club {
  id         String     @id @default(uuid())
  name       String
  inviteCode String
  ownerId    String
  createdAt  DateTime   @default(now())
  articles   Article[]  @relation("ClubArticles")
  categories Category[] @relation("ClubCategories")
  owner      User       @relation("UserClubs", fields: [ownerId], references: [id])
  sellers    Seller[]   @relation("ClubSellers")
}

model Seller {
  id        String   @id @default(uuid())
  name      String
  email     String
  clubId    String
  createdAt DateTime @default(now())
  club      Club     @relation("ClubSellers", fields: [clubId], references: [id])
}

model Category {
  id          String    @id @default(uuid())
  name        String
  description String
  clubId      String
  createdAt   DateTime  @default(now())
  articles    Article[] @relation("CategoryArticles")
  club        Club      @relation("ClubCategories", fields: [clubId], references: [id])
}

model Article {
  id          String    @id @default(uuid())
  name        String
  description String
  imageUrl    String?
  stock       Int?
  categoryId  String?
  clubId      String
  createdAt   DateTime  @default(now())
  price       Int
  category    Category? @relation("CategoryArticles", fields: [categoryId], references: [id])
  club        Club      @relation("ClubArticles", fields: [clubId], references: [id])
}
